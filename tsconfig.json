{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "./",
		"target": "esnext",
		"lib": ["es6", "dom"],
		"paths": {
			"@/*": ["./src/*"],
			"src/*": ["./src/*"],
			"@public/*": ["./public/*"],
		},
		"sourceMap": true,
		"module": "ES6",
		"jsx": "react-jsx",
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"useDefineForClassFields": true,
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["./src/**/*", "./typings/**/*"],
	"exclude": ["node_modules", "dist", "build"]
}
